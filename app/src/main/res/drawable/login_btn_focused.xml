<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> <!--    只有上下边框的shape    -->
    <item>
        <shape> <!--    边框颜色    -->
            <solid android:color="@color/set_text_color" />
        </shape>
    </item> <!--    想保留哪一边就设置哪一边边框就好了，列如只有上边框：top="1dp"    -->
    <item
        android:bottom="3dp"
        android:left="0dp">
        <shape>
            <solid android:color="@color/white" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>